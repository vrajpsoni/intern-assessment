<html>

<body>
    <h1>Show Task / Vraj Soni / vrajpinakin.soni001@umb.edu</h1>
    <a href="/add">Add</a> | <a href="/tasks">All</a> |
    <a href="/taskstatus/Pending">Pending</a> | <a href="/taskstatus/Completed">Completed</a>
    <br>
    <br>
    <table border="2">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        <tbody>
            <% tasks.forEach(task=> { %>
                <tr>
                    <td>
                        <%= task.id %>
                    </td>
                    <td>
                        <%= task.title %>
                    </td>
                    <td>
                        <%= task.status %>
                    </td>
                    <td><a href="/edit/<%= task.id %>">Edit</a>|<a href="/delete/<%= task.id %>">Delete</a></td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>